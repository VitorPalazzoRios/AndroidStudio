<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detalhesZoologico">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnVoltar5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btnVoltarClick"
                android:text="Voltar" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="293dp"
                app:srcCompat="@drawable/zool_gico_de_sorocaba_8" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="O Parque Zoológico Municipal Quinzinho de Barros – Zoológico Municipal de Sorocaba é um jardim zoológico situado no município de Sorocaba, estado de São Paulo, no Brasil, sendo considerado o segundo zoológico do Brasil em número de espécies."
                android:textColor="#000000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnLigar3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btnTelefonarCLick3"
                android:text="telefonar" />

            <Button
                android:id="@+id/btnSite3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btnAbrirNavegadorClick3"
                android:text="abrir site" />

            <Button
                android:id="@+id/btnMapa3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btnAbrirMapa3"
                android:text="ver mapa" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>