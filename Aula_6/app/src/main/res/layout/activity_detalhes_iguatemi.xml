<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detalhesIguatemi">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnVoltar4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btnVoltarClick"
                android:text="Voltar" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/iguatemi_esplanada7_easy_resize_com__424x280" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="O Iguatemi Esplanada é o maior empreendimento de uso misto do Interior de São Paulo. Com um mix de lojas completo, o empreendimento conta com mais de 400 lojas.  Além de importantes marcas do varejo nacional, oferece diversos serviços para facilitar o dia a dia de seus clientes que buscam, cada vez mais, conforto e qualidade."
                android:textColor="#000000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnLigar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btnTelefonarCLick1"
                android:text="Telefonar" />

            <Button
                android:id="@+id/btnSite2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btnAbrirNavegadorClick1"
                android:text="Abrir site" />

            <Button
                android:id="@+id/btnMapa2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btnAbrirMapa1"
                android:text="Ver mapa" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>